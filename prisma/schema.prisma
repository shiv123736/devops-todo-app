generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// This block tells Prisma to create a table named "Todo"
model Todo {
  id        Int      @id @default(autoincrement()) // Auto-increasing Integer ID (1, 2, 3...)
  task      String   // A text column
  completed Boolean  @default(false) // Default to 'false' (Not done)
  createdAt DateTime @default(now()) // Auto-stamp the creation time
}
